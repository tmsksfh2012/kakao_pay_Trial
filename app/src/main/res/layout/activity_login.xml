<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="카카오계정 로그인"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"></TextView>
    <View
        android:layout_marginTop="8dip"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayLine"/>

    <EditText
        android:id="@+id/name_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="15dip"
        android:textColor="@android:color/black"
        android:hint="아이디"
        android:padding="10dp"></EditText>

    <EditText
        android:id="@+id/pass_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dip"
        android:textColor="@android:color/black"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:padding="10dp" />

    <Button
        android:id="@+id/btn_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dip"
        android:layout_marginTop="20dp"
        android:paddingVertical="20dip"
        android:text="로그인"
        android:textColor="@color/grayText"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/btn_login_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="로그인 정보를 잊으셨나요?"
            android:textColor="@color/lightGrayText"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_marginTop="30dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새로운 카카오계정 만들기"
        android:textColor="@color/lightGrayText"
        android:background="@drawable/rounded_bg_empty"
        android:layout_gravity="center"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/inAppColor"
    tools:context=".src.login.LoginMainActivity">

    <ImageView
        android:layout_width="100dip"
        android:layout_height="50dip"
        android:src="@drawable/kakao_pay"
        android:layout_margin="15dip"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="270dip"
        android:layout_marginHorizontal="8dp"/>

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        app:ci_drawable="@drawable/black_radius"
        app:ci_height="7dp"
        app:ci_margin="4dp"
        app:ci_width="7dp"/>

    <LinearLayout
        android:id="@+id/more_view_btn_login"
        android:layout_width="258dip"
        android:layout_height="55dip"
        android:background="@drawable/rounded_bg_yellow"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:src="@drawable/ic_kakao"
            android:layout_marginEnd="10dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
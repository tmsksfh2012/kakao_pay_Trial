<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="18dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/making_profile_back"
            android:layout_width="18dp"
            android:layout_height="35dp"
            android:paddingTop="13dp"
            android:src="@drawable/ic_left"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="카카오계정 프로필을\n설정합니다."
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="11sp"
                android:textColor="@color/grayText"/>

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="20"
                android:textSize="15sp"
                android:paddingVertical="15dp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:hint="이름을 입력하세요"
                android:background="@drawable/inputbox_selector"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="11sp"
                android:textColor="@color/grayText"/>

            <EditText
                android:id="@+id/edit_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="20"
                android:textSize="15sp"
                android:paddingVertical="15dp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:hint="닉네임을 입력하세요"
                android:background="@drawable/inputbox_selector"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textSize="11sp"
                android:textColor="@color/grayText"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/inputbox_selector">

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:paddingBottom="15dp"
                    android:id="@+id/layout_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/birth_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="연도"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>

                    <ImageView
                        android:id="@+id/image_down_scroll_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_down_scroll"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="30dp"/>

                    <TextView
                        android:id="@+id/birth_mon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="월"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>

                    <ImageView
                        android:id="@+id/image_down_scroll_mon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_down_scroll"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="30dp"/>
                    <TextView
                        android:id="@+id/birth_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>

                    <ImageView
                        android:id="@+id/image_down_scroll_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_down_scroll"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />

                <CheckBox
                    android:id="@+id/check_birth_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/text_birth_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="음력"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textSize="11sp"
                android:textColor="@color/grayText"/>

            <RadioGroup
                android:paddingVertical="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/inputbox_selector">

                <RadioButton
                    android:id="@+id/check_gender_women"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="여성"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/check_gender_men"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="남성"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:textColor="@color/black"/>

                    <RadioButton
                        android:id="@+id/check_gender_no_choose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:checked="true"
                        android:text="선택안함"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_weight="1"/>
            </RadioGroup>
        </LinearLayout>

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다음"
            android:textSize="15sp"
            android:textColor="@color/grayText"
            android:background="@drawable/btn_rounded_bg_gray"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</ScrollView>
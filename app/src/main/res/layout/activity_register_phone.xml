<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="18dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/back"
            android:layout_width="18dp"
            android:layout_height="35dp"
            android:paddingTop="13dp"
            android:src="@drawable/ic_left"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="카카오계정\n서비스약관에 동의해주세요."
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/no_mail_agree_title_check_box"/>

            <TextView
                android:id="@+id/no_mail_agree_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모두 동의합니다."
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/no_mail_agree_title_check_box"
                app:layout_constraintBottom_toBottomOf="@id/no_mail_agree_title_check_box"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="전체동의는 필수 및 선택정보에 대한 동의도 포함되어 있으며, 개별적으로도 동의를 선택하실 수 있습니다. 선택항목에 대한 동의를 거부하시는 경우에도 서비스는 이용이 가능합니다."
                android:textColor="@color/grayText"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/no_mail_agree_title_check_box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/no_mail_agree_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayLine"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/no_mail_agree_fir_check_box"/>
            <TextView
                android:id="@+id/no_mail_agree_fir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="만 14세 이상입니다."
                android:textSize="13sp"
                android:textColor="@color/blackForText"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/no_mail_agree_seven_check_box"/>
            <TextView
                android:id="@+id/no_mail_agree_seven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[필수] 카카오계정 약관"
                android:textSize="13sp"
                android:textColor="@color/blackForText"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/no_mail_agree_sec_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                app:layout_constraintStart_toEndOf="@id/no_mail_agree_sec_check_box"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/no_mail_agree_sec_check_box"
                android:id="@+id/no_mail_agree_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[필수] 카카오 통합서비스약관"
                android:textSize="13sp"
                android:textColor="@color/blackForText"/>

            <TextView
                android:id="@+id/no_mail_agree_sec_contents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="본 약관은 회사가 제공하는 카카오, Daum, Melon 서비스 등에 공통 적용되며, 본 약관에 동의함으로써 개별적으로도 동의함으로써 해당 서비스들을 별도 이용계약 체결 없이 이용할 수 있습니다."
                android:textColor="@color/grayText"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/no_mail_agree_sec_check_box"
                app:layout_constraintTop_toBottomOf="@id/no_mail_agree_sec" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/no_mail_agree_six_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/no_mail_agree_six"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[선택] 카카오알림 채널 추가 및 광고메시지 수신"
                android:textSize="13sp"
                android:textColor="@color/blackForText"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/no_mail_agree_thr_check_box"/>
            <TextView
                android:id="@+id/no_mail_agree_thr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[필수] 개인정보 수집 및 이용 동의"
                android:textSize="13sp"
                android:textColor="@color/blackForText"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/no_mail_agree_five_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/no_mail_agree_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[선택] 위치정보 수집 및 이용 동의"
                android:textSize="13sp"
                android:textColor="@color/blackForText"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/no_mail_agree_for_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/no_mail_agree_for"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[선택] 프로필 정보 추가 수집 동의"
                android:textSize="13sp"
                android:textColor="@color/blackForText"/>
        </LinearLayout>
        <Button
            android:layout_marginBottom="13dp"
            android:id="@+id/btn_no_mail_agree"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="동의"
            android:background="@drawable/btn_rounded_bg_gray"
            android:textColor="@color/grayText"/>
    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dialog_background_top_rounded"
    android:layout_marginTop="40dp"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_default_img"/>

        <TextView
            android:id="@+id/text_name_send"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edit_send_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:background="@null"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:layout_gravity="start"
            android:textStyle="bold" >
            <requestFocus/>
        </EditText>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:background="@null"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:layout_gravity="start"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수수료 무료 ·"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 부족금액 자동충전"
            android:textColor="@color/black"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="15dp"
        android:background="@color/grayLine"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="송금 한도"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/text_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,000,000원"
            android:textColor="@color/black"
            android:textSize="14sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/send_check"
        android:layout_gravity="center"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="확인"
        android:textStyle="bold"
        android:textColor="@color/grayText"
        android:background="@drawable/btn_circle"
        android:textSize="17sp"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/one"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:background="@drawable/btn_rounded_bg_gray"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="25sp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/two"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="2"
                android:textSize="25sp"
                android:background="@drawable/btn_rounded_bg_gray"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/three"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="3"
                android:textSize="25sp"
                android:background="@drawable/btn_rounded_bg_gray"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/four"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="25sp"
                android:background="@drawable/btn_rounded_bg_gray"/>
            <Button
                android:id="@+id/five"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="25sp"
                android:background="@drawable/btn_rounded_bg_gray"/>
            <Button
                android:id="@+id/six"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="25sp"
                android:background="@drawable/btn_rounded_bg_gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/seven"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="25sp"
                android:background="@drawable/btn_rounded_bg_gray"/>
            <Button
                android:id="@+id/eight"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="25sp"
                android:background="@drawable/btn_rounded_bg_gray"/>
            <Button
                android:id="@+id/nine"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="25sp"
                android:background="@drawable/btn_rounded_bg_gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/my_money"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="잔액"
                android:textSize="15sp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_rounded_bg_gray"/>
            <Button
                android:id="@+id/zero"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="0"
                android:textSize="25sp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_rounded_bg_gray"/>
            <Button
                android:id="@+id/delete"
                android:text="Delete"
                android:textSize="15sp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_rounded_bg_gray"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingHorizontal="15dp">

        <ImageView
            android:layout_gravity="end"
            android:id="@+id/img_same_email_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/login_manager_main_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이미 카카오계정에 사용중인 이메일 입니다."
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="해당 카카오계정으로 로그인하거나 새로운 계정을 입력해 주세요.."
                android:textSize="13sp"/>

            <Button
                android:id="@+id/btn_err_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:background="@drawable/btn_rounded_bg_yellow"
                android:text="로그인"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingHorizontal="15dp"/>
            <Button
                android:id="@+id/btn_err_retry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_rounded_bg_gray"
                android:text="다시 입력"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingHorizontal="15dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
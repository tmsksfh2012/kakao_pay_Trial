<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/err_authNum_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_clear"
        android:onClick="clear"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="35dp"
        app:layout_constraintTop_toBottomOf="@id/err_authNum_clear"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/login_manager_main_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이미 카카오계정에 사용중인 이메일 입니다."
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="해당 카카오계정으로 로그인하거나 새로운 계정을 입력해 주세요.."
            android:textSize="13sp"/>

        <Button
            android:id="@+id/btn_err_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@drawable/btn_rounded_bg_yellow"
            android:text="로그인"
            android:textColor="#555555"
            android:textSize="16sp"
            android:paddingHorizontal="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_main_text" />
        <Button
            android:id="@+id/btn_err_retry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_rounded_bg_gray"
            android:text="다시 입력"
            android:textColor="#555555"
            android:textSize="16sp"
            android:paddingHorizontal="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_main_text" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
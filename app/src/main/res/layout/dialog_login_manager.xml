<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3F3F3">

    <ImageView
        android:id="@+id/login_manager_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_clear"
        android:background="@color/colorPrimary"
        android:onClick="clear"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="32dp"
        android:paddingTop="20dp"
        android:paddingBottom="35dp"
        app:layout_constraintTop_toBottomOf="@id/login_manager_clear"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/login_manager_main_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="카카오계정으로 로그인하는데\n도움이 필요하신가요?"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/login_manager_btn_fir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@color/kakaoYellow"
            android:text="이메일 또는 전화번호를 모르겠어요!"
            android:textColor="#555555"
            android:textSize="12sp"
            android:paddingHorizontal="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_main_text" />

        <Button
            android:id="@+id/login_manager_btn_sec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#DDDDDD"
            android:text="비밀번호를 모르겠어요!"
            android:textColor="#555555"
            android:textSize="12sp"
            android:paddingHorizontal="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_btn_fir" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
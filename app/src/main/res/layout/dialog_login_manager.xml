<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingHorizontal="15dp">

        <ImageView
            android:layout_gravity="end"
            android:id="@+id/login_manager_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/login_manager_main_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="카카오계정으로 로그인하는데\n도움이 필요하신가요?"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/login_manager_btn_fir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:background="@drawable/btn_rounded_bg_yellow"
                android:text="이메일 또는 전화번호를 모르겠어요!"
                android:textColor="@color/black"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/login_manager_btn_sec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_rounded_bg_gray"
                android:text="비밀번호를 모르겠어요!"
                android:textColor="@color/black"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
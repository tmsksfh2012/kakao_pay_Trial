<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".src.main.moreviewpage.MoreViewFragment"
    android:layout_marginHorizontal="20dip">
    <ImageView
        android:id="@+id/more_view_img_setting"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:src="@drawable/setting"
        android:layout_gravity="end"
        android:layout_marginVertical="25dip"
        android:layout_marginHorizontal="5dip"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_gravity="start"
            android:src="@drawable/photo_more_view"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more_view_title"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="18sp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/more_view_main_box"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/rounded_bg_white"
        android:scaleType="centerCrop"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dip"/>



</LinearLayout>